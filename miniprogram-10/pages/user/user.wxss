/* pages/user/user.wxss */
.top{
  height: 20vh;
  border-bottom: 3px solid #dedede;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
 }
 .top .img{
   width: 80px;
   height: 80px;
   overflow: hidden;
   border-radius: 50%;
 }
 
 .top .text{
   text-align: center;
   font-size: 14px;
   color: #333333;
 }
 .itemm{
   display: flex;
   line-height: 40px;
   border-bottom: 1px solid #dedede;
   background: #fff;
   padding: 0 16px;
 }
 
 .itemm .left{
   flex: 1 0 50%;
   font-size: 14px;
   color: #333333;
 }
 
 .itemm .right{
   flex: 1 0 50%;
   display: flex;
   justify-content: flex-end;
   align-items: center;
 }
 
 .itemm image{
   width: 8px;
   height: 15px;
 }
 
 .itemm text{
   font-size: 12px;
   color: #999999;
   padding-right: 10px;
 }
 
 .icon{
   border-bottom:1px solid #EDEDED; 
   display: flex;
   padding: 12px 0;
 }
 .icon image{
   display: block;
   width: 30px;
   height: 30px;
   margin: 0 auto;
   padding-top: 10px;
 }
 .icon text{
   display: block;
   text-align: center;
   width: 100%;
   font-size: 14px;
   color: #333;
   padding-top: 10px;
 }
 .icon navigator{
   flex: 1 0 25%;
 }
 .icon view{
  flex: 1 0 25%;
}