/* pages/category/category.wxss */
@import '../common/common.wxss';

page,.main{
    height: 100%;

}
.categroy-left{
    float: left;
    width: 150rpx;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;

}
.categroy-left .cate-list{
    height: 65rpx;
    line-height: 65rpx;
    text-align: center;
    border-left: 3px solid #ffffff;
    border-bottom: 2px solid rgb(235, 231, 231);
    font-size: 28rpx;
}
.categroy-left .cate-list.on{
    text-align: center;
    color: #AB956D;
    border-color: #AB956D;
}
.categroy-right{
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
    padding: 20rpx;
    
}
.cate-box .cate-box2{
    height: auto;
    padding:40rpx;
    box-sizing: border-box;
}
.cate-box{
    height:100%; height:auto;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 150rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #AB956D;
    font-size: 32rpx;
}
.cate-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}
.cate-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}

.product-list{
    border: 1rpx #AB956D solid;
    display: inline-block;

    width: 160rpx; width: 115rpx;
    height: 160rpx;

    text-align: center;
    margin:0rpx 20rpx 20rpx 0rpx;
    font-size: 24rpx;
}
.product-list image{
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
}
.product-list:nth-child(4n){
    margin-right: 0;
}
.cate-box:nth-child(13n){
    height: 100%;
}