/**顶端搜索框css样式***/
 
  .custom-bar {
     background-color: #ffffff; 
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    display: flex;
  }
  
  .search-group {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border: 1px solid #cccccc;
    border-radius: 60rpx;
    padding: 0 10rpx;
  }
  .search-group2 {
    width: 100%;
    height: 100%;
    display: flex; 
    justify-content: flex-start;
    align-items: center;
    padding: 0 10rpx;
  }
  .search-group2 > image {
    height: 80rpx;
    width: 80rpx;
    margin-right: 20rpx
  }