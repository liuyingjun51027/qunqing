/* pages/index/index.wxss */
@import '../common/common.wxss';
.content{

  display: flex;
 
  justify-content: space-between;
 
  flex-wrap:wrap;
 
 padding: 0 20rpx;


 }
 
 .itemx{
 
  width: 375rpx;
  width: 50%;
  margin: 0 0 20rpx 0;
 
 }
 
 .itemx image{
 
  width: 98%;
 
  height: 450rpx;
 
 }

 .scroll_view{
  height:100vh;
  margin-bottom: 120rpx;
}
/* 返回顶部 */
.goTop{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 100rpx;
  background: rgba(0,0,0,.3);
  right: 30rpx;
  border-radius: 50%;
  z-index: 10;
}
.cart {
  width:50rpx;
  height:50rpx;
}
swiper {
  height: 421.5rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}

.search{
  padding: 20rpx;
}
.search-text{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  color: #aaa;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 20rpx;
}
.search-text icon{
  margin-right: 10rpx;
}